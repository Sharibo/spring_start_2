<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>


    <bean id="testBean"
          class="com.gmail.alexejkrawez.TestBean">
        <constructor-arg value="Neil"/>
    </bean>

    <bean id="classicalMusicBean" class="com.gmail.alexejkrawez.ClassicalMusic"/>
    <bean id="rockMusicBean" class="com.gmail.alexejkrawez.RockMusic"/>
    <bean id="countryMusicBean" class="com.gmail.alexejkrawez.CountryMusic"/>

    <bean id="musicPlayer" class="com.gmail.alexejkrawez.MusicPlayer">
        <property name="music">
            <list value-type="com.gmail.alexejkrawez.Music">
                <ref bean="classicalMusicBean"/>
                <ref bean="rockMusicBean"/>
                <ref bean="countryMusicBean"/>
            </list>
        </property>
        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>


</beans>